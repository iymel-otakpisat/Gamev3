<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gamev3">

    <application
        android:allowBackup="true"
        android:icon="@drawable/circular_saw"
        android:label="@string/app_name"
        android:roundIcon="@drawable/circular_saw"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameV3">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LevelActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape">
        </activity>

        <activity
            android:name=".ShopActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape">
        </activity>

        <activity
            android:name=".Record"
            android:exported="true"
            android:screenOrientation="sensorLandscape"
            >
        </activity>

        <service
            android:name=".LevelSoundService"
            android:enabled="true" />
        <service
            android:name=".ShopSoundService"
            android:enabled="true" />
    </application>

</manifest>